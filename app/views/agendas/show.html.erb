<%- model_class = Agenda -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:paciente) %>:</strong></dt>
  <dd><%= @agenda.paciente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medico) %>:</strong></dt>
  <dd><%= @agenda.medico %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dtHoraConsulta) %>:</strong></dt>
  <dd><%= @agenda.dtHoraConsulta %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              agendas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_agenda_path(@agenda), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              agenda_path(@agenda),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
